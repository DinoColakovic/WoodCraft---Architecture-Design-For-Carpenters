<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ba.woodcraft.ui.controller.LoginController"
      alignment="CENTER" spacing="12">

    <Label text="WoodCraft Login" />

    <TextField fx:id="usernameField" promptText="Username" maxWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>

    <Button text="Login" maxWidth="250" onAction="#onLogin"/>
</VBox>
